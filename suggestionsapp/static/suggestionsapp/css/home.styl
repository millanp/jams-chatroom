span.voting
	margin-left auto
	
	div.vote
		transition all 0.75s
		transform rotate(0deg)
		animation none
		&.loading
			animation rotate 3s linear infinite
@keyframes rotate
	from
		transform rotate(0deg)
	to
		transform rotate(360deg)

.navbar-brand
	white-space nowrap

#navbar
	width 100%

#create-account-button
	margin-left auto

nav .container
	display flex
	align-items center

#navbar ul
	display flex
	align-items center
	width 100%

.suggestion-preview-text
	display flex
	flex-direction column
	justify-content center

.list-group-item
	display flex
	
	a
		display inline-flex

#upvote-success-message
	top 0
	margin-top 10px
	margin-bottom auto
	z-index 1030
	display none

#floater-wrapper
	position fixed
	display flex
	justify-content center
	z-index 2000
	top 0
	left 0
	width 100%